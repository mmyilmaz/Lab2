package lab2;

import java.util.Scanner;

public class Q1_bigNumber {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan=new Scanner (System.in);
		System.out.println("Enter your first number:");
		int firstNum=scan.nextInt();
		System.out.println("Enter your second number:");
		int secondNum=scan.nextInt();
		int biggest=0;
		int smallest=0;
		if (secondNum>firstNum) {
			biggest=secondNum;
			smallest=firstNum;
		}
		else {
			biggest=firstNum;
			smallest=secondNum;
		}
		for (int i=1;1<100;i++) {
			int newNumber=0;
			
		System.out.println("Do you want to enter another number: 0-No, 1-Yes");
		int yesOrNo=scan.nextInt();
	
		if (yesOrNo==0) {
			break;
		}
		else {
			newNumber=scan.nextInt();
		}
		if (newNumber>biggest) {
			biggest=newNumber;
			
			}
		if (newNumber<smallest) {
			smallest=newNumber;
		}
		
			
		}
		System.out.println("Largest nummber is: "+biggest);
		System.out.println("Smallest nummber is: "+smallest);
	
	}
		
	}

/*
 Write a program with a loop that lets the user enter a series of integer numbers. 
 After all the numbers have been entered, the program should display the largest and smallest numbers entered.*/


