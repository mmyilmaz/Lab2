package lab2;

import java.util.Scanner;

public class CookiesAndCalories {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int caloriesOfEachCookies=30;
		Scanner scan=new Scanner(System.in);
		System.out.println("Enter numbber of cookies you ate");
		int cookiesConsumed=scan.nextInt();
		int totalCalories=cookiesConsumed*caloriesOfEachCookies;
		System.out.println("Total calories of cookies: "+totalCalories);
		
		
	}

}


